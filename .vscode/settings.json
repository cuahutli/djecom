{
    "python.pythonPath": "venv\\Scripts\\python.exe",
    "emmet.includeLanguages": {
        "django-html": "html",
    },
    "editor.formatOnSave": true,
    "editor.rulers": [
        80,
        120
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        ".vscode": false,
        "**/*.pyc": true,
        "**/__pycache__": true,
    },
    "workbench.editor.enablePreview": false,
    "editor.minimap.enabled": false,
    "python.linting.pylintArgs": [
        "--load-plugins",
        "pylint_django"
    ]
}